<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>B&L Microfinance USSD Simulator</title>
  <style>
    body {
      font-family: monospace;
      background-color: #000;
      color: #0f0;
      display: flex;
      flex-direction: column;
      align-items: center;
      padding: 20px;
      min-height: 100vh;
    }
    h1 { color: #0ff; }
    #ussdResponse {
      width: 100%;
      max-width: 400px;
      min-height: 200px;
      background: #111;
      border: 2px solid #0f0;
      padding: 10px;
      margin: 20px 0;
      white-space: pre-wrap;
      overflow-y: auto;
    }
    #ussdForm input {
      padding: 10px;
      width: 200px;
      font-size: 16px;
      margin-right: 10px;
    }
    #ussdForm button {
      padding: 10px 20px;
      font-size: 16px;
      cursor: pointer;
    }
  </style>
</head>
<body>
  <h1>B&L Microfinance USSD Simulator</h1>  <div id="ussdResponse">
Welcome to B&L Microfinance
1. Check Loan Balance
2. Make Payment
3. Apply for Loan
  </div>  <form id="ussdForm">
    <input type="text" id="userInput" placeholder="Enter choice..." autofocus />
    <button type="submit">Send</button>
  </form>  <script>
    const form = document.getElementById('ussdForm');
    const input = document.getElementById('userInput');
    const response = document.getElementById('ussdResponse');

    // Keep track of session state
    let state = "mainMenu";
    let balance = 10000; // Example loan balance
    let loanApplicationAmount = 0;

    form.addEventListener('submit', (e) => {
      e.preventDefault();
      const text = input.value.trim();
      if (!text) return;

      let nextMenu = "";

      if (state === "mainMenu") {
        if (text === "1") {
          nextMenu = `Your loan balance is KES ${balance}\n1. Back\n2. Exit`;
          state = "checkBalance";
        } else if (text === "2") {
          nextMenu = "Enter amount to pay:";
          state = "makePayment";
        } else if (text === "3") {
          nextMenu = "Enter loan application amount:";
          state = "applyLoan";
        } else {
          nextMenu = "Invalid choice. Try again:\n1. Check Loan Balance\n2. Make Payment\n3. Apply for Loan";
        }
      } else if (state === "checkBalance") {
        if (text === "1") {
          nextMenu = "Welcome to B&L Microfinance\n1. Check Loan Balance\n2. Make Payment\n3. Apply for Loan";
          state = "mainMenu";
        } else {
          nextMenu = "Session ended. Refresh page to start again.";
          state = "ended";
        }
      } else if (state === "makePayment") {
        const amount = parseFloat(text);
        if (!isNaN(amount) && amount > 0) {
          balance -= amount;
          nextMenu = `Payment of KES ${amount} successful!\nNew balance: KES ${balance}\n1. Back\n2. Exit`;
          state = "paymentDone";
        } else {
          nextMenu = "Invalid amount. Enter numeric value:";
        }
      } else if (state === "paymentDone") {
        if (text === "1") {
          nextMenu = "Welcome to B&L Microfinance\n1. Check Loan Balance\n2. Make Payment\n3. Apply for Loan";
          state = "mainMenu";
        } else {
          nextMenu = "Session ended. Refresh page to start again.";
          state = "ended";
        }
      } else if (state === "applyLoan") {
        const amount = parseFloat(text);
        if (!isNaN(amount) && amount > 0) {
          loanApplicationAmount = amount;
          nextMenu = `Loan application for KES ${loanApplicationAmount} submitted!\n1. Back\n2. Exit`;
          state = "loanApplied";
        } else {
          nextMenu = "Invalid amount. Enter numeric value:";
        }
      } else if (state === "loanApplied") {
        if (text === "1") {
          nextMenu = "Welcome to B&L Microfinance\n1. Check Loan Balance\n2. Make Payment\n3. Apply for Loan";
          state = "mainMenu";
        } else {
          nextMenu = "Session ended. Refresh page to start again.";
          state = "ended";
        }
      } else {
        nextMenu = "Session ended. Refresh page to start again.";
      }

      response.textContent = nextMenu;
      input.value = '';
      input.focus();
    });
  </script></body>
</html>
