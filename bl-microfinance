    }
    h1 {
      color: #0ff;
    }
    #ussdResponse {
      width: 100%;
      max-width: 400px;
      min-height: 150px;
      background: #111;
      border: 2px solid #0f0;
      padding: 10px;
      margin: 20px 0;
      white-space: pre-wrap;
    }
    #ussdForm input {
      padding: 10px;
