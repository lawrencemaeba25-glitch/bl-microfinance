<body>
  <h1>B&L Microfinance USSD Simulator</h1>

  <div id="ussdResponse">
Welcome to B&L Microfinance
1. Check Loan Balance
2. Make Payment
3. Apply for Loan
  </div>

  <form id="ussdForm">
    <input type="text" id="userInput" placeholder="Enter choice..." autofocus />
    <button type="submit">Send</button>
  </form>

  <script>
    const form = document.getElementById('ussdForm');
    const input = document.getElementById('userInput');
    const response = document.getElementById('ussdResponse');

    // Simulate a session ID (unique per browser tab)
    const sessionId = Date.now();

    form.addEventListener('submit', async (e) => {
      e.preventDefault();
      const userText = input.value.trim();
      if (!userText) return;

      try {
        const res = await fetch('https://bl-microfinance-ussd1.onrender.com/ussd', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({
            sessionId: sessionId.toString(),
            phoneNumber: '+254700000001',
            text: userText
          })
        });

        const data = await res.json();
        // Expecting backend response: { response: "Next menu text" }
        if (data.response) {
          response.textContent = data.response;
        } else {
          response.textContent = "Error: no response from backend";
        }
      } catch (err) {
        response.textContent = "Error connecting to backend:\n" + err;
      }

      input.value = '';
      input.focus();
    });
  </script>
</body>
</html>
